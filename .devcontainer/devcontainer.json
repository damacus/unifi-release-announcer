{
  "name": "UniFi Release Announcer Dev Container",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-vscode.test-adapter-converter",
        "ms-python.pytest"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python",
        "python.terminal.activateEnvironment": false,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "."
        ],
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/.mypy_cache": true,
          "**/.ruff_cache": true
        }
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "echo 'Dev container ready!'",
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.venv,target=/app/.venv,type=volume",
    "source=${localWorkspaceFolder}/.ruff_cache,target=/app/.ruff_cache,type=volume",
    "source=${localWorkspaceFolder}/.mypy_cache,target=/app/.mypy_cache,type=volume",
    "source=${localWorkspaceFolder}/.pytest_cache,target=/app/.pytest_cache,type=volume"
  ]
}
